<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:id="@+id/main">

    <!-- Campo de entrada para el nombre del Pokémon -->
    <EditText
        android:id="@+id/etPokemonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese nombre del Pokémon"
        android:inputType="text"
        android:padding="10dp"/>

    <!-- Botón para buscar el Pokémon -->
    <Button
        android:id="@+id/btnSearchPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Pokémon"
        android:layout_marginTop="10dp"/>

    <!-- TextView para mostrar el nombre del Pokémon -->
    <TextView
        android:id="@+id/tvPokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <!-- TextView para mostrar la altura del Pokémon -->
    <TextView
        android:id="@+id/tvPokemonHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura:"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <!-- TextView para mostrar el peso del Pokémon -->
    <TextView
        android:id="@+id/tvPokemonWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso:"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
